<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="order" namespace="/order" extends="tiles-default">

        <action name="list" class="orderAction" method="list">
            <result name="success" type="tiles">orderList.tiles</result>
        </action>

        <action name="initBooking" class="orderAction" method="initBooking">
            <result name="success" type="tiles">initBooking.tiles</result>
        </action>

        <action name="booking" class="orderAction" method="booking">
            <result name="success" type="redirectAction">list.action</result>
        </action>

        <action name="updateBooking" class="orderAction" method="updateBooking">
            <result name="success" type="redirectAction">list.action</result>
        </action>

        <action name="delete" class="orderAction" method="delete">
            <result name="success" type="redirectAction">list.action</result>
        </action>

        <action name="initUpdate" class="orderAction" method="view">
            <result name="success" type="tiles">initUpdate.tiles</result>
        </action>

        <action name="view" class="orderAction" method="view">
            <result name="success" type="tiles">orderView.tiles</result>
        </action>

        <action name="updateOrderStatus" class="orderAction" method="updateOrderStatus">
            <result name="success" type="redirectAction">list.action</result>
        </action>

        <action name="query" class="orderAction" method="query">
            <result name="list" type="redirectAction">list.action</result>
            <result name="success" type="tiles">orderList.tiles</result>
        </action>

        <action name="updateOrderStatusAjax" class="orderAction" method="updateOrderStatusAjax">
            <result name="success" type="tiles">orderList.tiles</result>
        </action>

    </package>
</struts>
