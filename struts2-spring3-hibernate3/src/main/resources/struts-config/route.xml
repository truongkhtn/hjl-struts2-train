<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="route" namespace="/route" extends="tiles-default">

        <action name="list" class="routeAction" method="list">
            <result name="success" type="tiles">routeList.tiles</result>
        </action>

        <action name="initCreate" class="routeAction" method="initCreate">
            <result name="success" type="tiles">routeCreate.tiles</result>
        </action>

        <action name="create" class="routeAction" method="create">
            <result name="success" type="redirectAction">list.action</result>
        </action>

        <action name="view" class="routeAction" method="view">
            <result name="success" type="tiles">routeView.tiles</result>
        </action>

        <action name="initUpdate" class="routeAction" method="initUpdate">
            <result name="success" type="tiles">routeUpdate.tiles</result>
        </action>

        <action name="update" class="routeAction" method="update">
            <result name="success" type="redirectAction">list.action</result>
        </action>

        <action name="delete" class="routeAction" method="delete">
            <result name="success" type="redirectAction">list.action</result>
        </action>

    </package>
</struts>
