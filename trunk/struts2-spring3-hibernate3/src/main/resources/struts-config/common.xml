<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="common" namespace="/" extends="tiles-default">

        <action name="login" class="userAction" method="login">
             <result name="success" type="redirectAction">index.action</result>
        </action>

        <action name="index" class="commonAction" method="index">
            <result name="success" type="tiles">index.tiles</result>
        </action>

    </package>
</struts>
