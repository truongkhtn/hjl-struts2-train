<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="common" namespace="/" extends="tiles-default">

        <interceptors>
            <!-- 自定义拦截器 -->
            <interceptor name="sessionInterceptor" class="com.company.travel.interceptor.SessionInterceptor">
                   <!--<param name="excludeMethods">login</param>-->
            </interceptor>
            <!-- 配制默许的拦截器到拦截器栈 -->
            <interceptor-stack name="myStack">
                <!-- 此处先后顺序没有影响 -->
                <interceptor-ref name="sessionInterceptor">
                </interceptor-ref>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>
        <!-- 配置默认的拦截器 -->
        <!--<default-interceptor-ref name="myStack"/>-->

        <action name="login" class="userAction" method="login">
            <!--<result name="success" type="redirectAction">index.action</result>-->
            <result name="success" type="redirectAction">message/messageList.action</result>
            <result name="input" type="redirect">html/accessDenied.html</result>
        </action>

        <action name="logout" class="userAction" method="logout">
            <result name="success" type="redirect">login.html</result>
        </action>

        <action name="index" class="commonAction" method="index">
            <interceptor-ref name="sessionInterceptor"/>
            <result name="success" type="tiles">index.tiles</result>
            <result name="invalid" type="redirect">login.html</result>
        </action>

    </package>
</struts>
